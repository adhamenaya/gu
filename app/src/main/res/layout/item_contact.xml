<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layoutDirection="rtl"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIcon" android:textSize="18sp" android:textStyle="bold"
         android:layout_alignParentRight="true"
        android:text="TextView" android:layout_toRightOf="@id/ivCall" />1

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="18sp"
        android:layout_below="@+id/tvName"
        android:text="TextView" android:layout_toRightOf="@id/ivCall"/>

    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="wrap_content" android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_phone_black_32dp" android:layout_margin="10dp"
       />

</RelativeLayout>